{% extends 'index.twig' %}

{% block content %}
    <div class="mdl-typography--text-center">
        <div class="mdl-typography--display-2-color-contrast">
            <h4>Les pièces détachées</h4>
        </div>
        <div class="wrapper" align="center">
            {% if spareParts is not null and spareParts is not empty %}
                {% for sparePart in spareParts %}
                    <div class="wrapper-card">
                        <div class="demo-card-image mdl-card mdl-shadow--2dp"
                        style="background: url({{ sparePart.photos[0] }}) center / cover;">
                            <div class="mdl-card__title mdl-card--expand"></div>
                            <div class="mdl-card__actions">
                                <span class="demo-card-image__filename">{{ sparePart.name }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <div class="content-bottom">
        <a href="spareParts/add"
           class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
            <i class="material-icons">add</i>
            ajouter pièce détachée
        </a>
    </div>

{% endblock %}
