{% extends 'index.twig' %}

{% block content %}
    <div class="mdl-typography--text-center">
        <div class="mdl-typography--display-2-color-contrast">
            <h4>Les pièces détachées</h4>
        </div>
        <div class="mdl-grid" align="center">
            {% if spareParts is not null and spareParts is not empty %}
                {% for sparePart in spareParts %}
                    <div class="demo-card-square mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
                        <div class="mdl-card__title mdl-card--expand">
                            <img src="{{ sparePart.photos[0] }}" />
                        </div>
                        <div class="mdl-card__supporting-text">
                            <h5>{{ sparePart.part }}</h5>
                        <span class="mdl-chip">
                            <span class="mdl-chip__text">{{ sparePart.category }}</span>
                        </span>
                        </div>
                        <div class="mdl-card__actions mdl-card--border">
                            <a href="/spareParts/backOffice/details/{{ sparePart._id }}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                                <i class="material-icons">list</i> Voir détails
                            </a>
                        </div>
                        <div class="mdl-card__menu">
                            <a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                                <i class="material-icons">more</i>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <div class="content-bottom">
        <a href="/spareParts/backOffice/add" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
            <i class="material-icons">add</i>
            ajouter pièce détachée
        </a>
    </div>
{% endblock %}
