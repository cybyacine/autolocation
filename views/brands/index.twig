{% extends 'index.twig' %}

{% block content %}
    <div class="mdl-typography--text-center">
        <div class="mdl-typography--display-2-color-contrast">
            <h4>Les voitures neuves <p>par marque</p></h4>
        </div>
        <div class="wrapper" align="center">
            {% if brands is not null and brands is not empty %}
                {% for brand in brands %}
                    <div class="wrapper-card">
                        <div class="demo-card-image mdl-card mdl-shadow--2dp"
                        style="background: url({{ brand.logo }}) center / cover;">
                            <div class="mdl-card__title mdl-card--expand"></div>
                            <div class="mdl-card__actions">
                                <span class="demo-card-image__filename">{{ brand.name }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    <div class="content-bottom">
        <a href="brands/add"
           class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored">
            <i class="material-icons">add</i>
            ajoute marque
        </a>
    </div>

{% endblock %}
